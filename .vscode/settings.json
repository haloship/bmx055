{
    "beautify.onSave": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "clang-tidy.lintOnSave": true,
    "clang-tidy.buildPath": "${workspaceFolder}/library/examples/basic/.pio/build/nodemcuv2/compile_commands.json",
    "files.associations": {
        "functional": "cpp",
        "unordered_map": "cpp",
        "tuple": "cpp",
        "vector": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "condition_variable": "cpp",
        "cstdarg": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "list": "cpp",
        "exception": "cpp",
        "fstream": "cpp",
        "future": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "numeric": "cpp",
        "ratio": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "system_error": "cpp",
        "thread": "cpp",
        "cinttypes": "cpp",
        "regex": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "typeinfo": "cpp",
        "strstream": "cpp",
        "cfenv": "cpp",
        "complex": "cpp",
        "csetjmp": "cpp",
        "csignal": "cpp",
        "forward_list": "cpp",
        "unordered_set": "cpp",
        "rope": "cpp",
        "slist": "cpp",
        "scoped_allocator": "cpp",
        "typeindex": "cpp",
        "valarray": "cpp",
        "cstddef": "cpp",
        "bit": "cpp",
        "codecvt": "cpp",
        "map": "cpp",
        "set": "cpp",
        "algorithm": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "shared_mutex": "cpp",
        "variant": "cpp",
        "any": "cpp",
        "charconv": "cpp",
        "cuchar": "cpp"
    },
    "cmake.configureOnOpen": false,
    "autoDocstring.docstringFormat": "sphinx",
    "autoDocstring.startOnNewLine": true,
    "extensions.ignoreRecommendations": false,
    "editor.rulers": [
        80
    ],
    "python.sortImports.args": [
        "--trailing-comma",
        "--force-grid-wrap",
        "0",
        "--use-parentheses",
        "--line-width",
        "80",
        "--multi-line",
        "3",
        "--project",
        "ramen"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=80"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--enable=W0611"
    ],
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "cSpell.words": [
        "DCMAKE",
        "Struct",
        "Werror",
        "Wextra",
        "iwholename",
        "nmspc",
        "nodemcuv",
        "platformio",
        "NOLINTNEXTLINE",
        "println",
    ],
    "fileHeaderComment.parameter": {
        "*": {
            "commentbegin": "/*",
            "commentprefix": " *",
            "commentend": " */",
            "name": "Nishant Aswani",
            "company": "HALOSHIP"
        }
    },
    "fileHeaderComment.template": {
        "*": [
            "${commentbegin}",
            "${commentprefix} ${filename}",
            "${commentprefix}",
            "${commentprefix} Copyright (C) ${year}, ${company}",
            "${commentprefix}",
            "${commentprefix} This software is developed under the Haloship project",
            "${commentprefix} at the Engineering Design Studio (https://nyuad.io).",
            "${commentprefix}",
            "${commentprefix} This software is released under the MIT License.",
            "${commentprefix}",
            "${commentprefix} This software was developed with StreetCat and <3",
            "${commentend}"
        ]
    }
}